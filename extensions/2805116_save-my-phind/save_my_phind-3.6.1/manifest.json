{
  "manifest_version": 3,
  "name": "Save my Chatbot - AI Conversation Exporter",
  "version": "3.6.1",
  "description": "\ud83d\ude80 Download Claude, Perplexity, Phind, ChatGPT and MaxAI-Google knowledge into markdown files!",
  "homepage_url": "https://save.hugocollin.com",
  "icons": {
    "16": "files/icons/icon-16.png",
    "32": "files/icons/icon-48.png",
    "48": "files/icons/icon-48.png",
    "96": "files/icons/icon-128.png",
    "128": "files/icons/icon-128.png",
    "500": "files/icons/icon-500.png"
  },
  "permissions": [
    "scripting",
    "activeTab",
    "storage",
    "contextMenus"
  ],
  "host_permissions": [
    "*://*.phind.com/*",
    "*://*.perplexity.ai/*",
    "*://google.com/search*",
    "*://chatgpt.com/*",
    "*://*.claude.ai/*"
  ],
  "action": {
    "default_icon": "files/icons/icon_disabled-500.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.phind.com/*",
        "*://*.perplexity.ai/*",
        "*://*.google.com/search*",
        "*://chatgpt.com/*",
        "*://*.claude.ai/*"
      ],
      "js": [
        "tab.js"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "files/*"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "savemyphind@hugocollin.com",
      "strict_min_version": "109.0"
    }
  }
}