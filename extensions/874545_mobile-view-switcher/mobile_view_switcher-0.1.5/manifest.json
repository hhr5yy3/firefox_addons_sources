{
  "version": "0.1.5",
  "manifest_version": 2,
  "name": "Mobile View Switcher",
  "short_name": "mobile-view-switcher",
  "background": {
    "page": "lib/chrome/background.html"
  },
  "homepage_url": "https://mybrowseraddon.com/mobile-view-switcher.html",
  "description": "Switch to mobile view with one click via toolbar button.",
  "permissions": [
    "storage",
    "*://*/*",
    "contextMenus",
    "webRequest",
    "webRequestBlocking"
  ],
  "options_ui": {
    "open_in_tab": true,
    "page": "data/options/options.html"
  },
  "commands": {
    "toggle-default-mode": {
      "description": "Switch to Mobile View",
      "suggested_key": {
        "mac": "Command+Shift+D",
        "default": "Ctrl+Shift+D"
      }
    }
  },
  "browser_action": {
    "default_title": "Mobile View Switcher",
    "default_icon": {
      "16": "data/icons/16.png",
      "32": "data/icons/32.png",
      "48": "data/icons/48.png",
      "64": "data/icons/64.png"
    }
  },
  "content_scripts": [
    {
      "all_frames": true,
      "matches": [
        "*://*/*"
      ],
      "run_at": "document_start",
      "js": [
        "data/content_script/inject.js"
      ]
    }
  ],
  "icons": {
    "16": "data/icons/16.png",
    "32": "data/icons/32.png",
    "48": "data/icons/48.png",
    "64": "data/icons/64.png",
    "128": "data/icons/128.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "{fa247c57-77ac-41cd-b942-332051e15ced}"
    }
  }
}