{

  "description": "Permette di visualizzare una fattura elettronica in modo leggibile",
  "manifest_version": 2,
  "name": "Formatta fattura elettronica",
  "version": "1.14",

  "applications": {
    "gecko": {
       "strict_min_version": "56.0"
    }
   },

  "options_ui": {
      "page": "options.html",
      "browser_style": true
  },

  "browser_action": {
    "default_icon": "icons/38-green.png",
    "default_title": "Disattiva la formattazione delle fatture elettroniche"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"	],
      "js": ["contentScript.js"]
    }
  ],

  "background": {
    "scripts": ["background.js"]
  },

  "permissions": [
    "file:///*",
    "activeTab",
    "tabs",
    "storage"
  ]

}