{
  "manifest_version": 2,
  "name": "Regex",
  "version": "2.0.0",
  "default_locale": "en",
  "icons": {
    "16": "icons/16.png",
    "32": "icons/32.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "browser_action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "all_frames": false,
      "js": [
        "content-script.js"
      ],
      "matches": [
        "<all_urls>"
      ],
      "run_at": "document_start"
    }
  ],
  "permissions": [
    "storage"
  ],
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+F"
      }
    }
  },
  "offline_enabled": true,
  "browser_specific_settings": {
    "gecko": {
      "id": "{b18ca74a-31e0-4dad-aa57-f0f51244237f}"
    }
  }
}