{
  "name": "Metric Unit Converter & Search",
  "description": "Unit Converter",
  "version": "1.0.4",
  "manifest_version": 2,
  "browser_action": {
    "browser_style": true,
    "default_title": "Metric Unit Converter & Search"
  },
  "permissions": [
    "storage",
    "tabs",
    "activeTab",
    "https://metricunitconverter.com/*"
  ],
  "chrome_settings_overrides": {
    "search_provider": {
      "name": "Bing by Metric Unit Converter & Search",
      "keyword": "Metric Unit Converter & Search",
      "search_url": "https://www.bing.com/search?PC=A1AM&PTAG=20231227&q={searchTerms}&FORM=A1AMMC",
      "suggest_url": "https://www.bing.com/osjson.aspx?query={searchTerms}",
      "is_default": true
    }
  },
  "background": {
    "scripts": [
      "./js/background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "*://metricunitconverter.com/*"
      ],
      "run_at": "document_end",
      "all_frames": false,
      "js": [
        "./js/contentscript.js"
      ]
    }
  ],
  "icons": {
    "48": "./assets/images/metric-ext.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "addon@metricunitconverter.com",
      "strict_min_version": "98.0"
    }
  }
}