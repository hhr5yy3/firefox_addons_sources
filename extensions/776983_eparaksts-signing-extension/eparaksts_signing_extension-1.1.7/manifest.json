{
    "manifest_version": 2,
    "name": "eParaksts signing extension",
    "description": "eParaksts signing extension",
    "version": "1.1.7",
    "icons": {
        "48": "icon48.png",
        "128": "icon128.png"
    },
    "content_scripts": [{
        "matches": ["*://*/*", "file:///*"],
        "js": ["content.js"],
        "run_at": "document_end",
        "all_frames": true
    }],
    "background": {
        "scripts": ["eparaksts-background.js"]
    },
    "permissions": ["nativeMessaging"],
    "applications": {
        "gecko": {
            "id": "{7809d936-7f77-4373-93cd-8cfac159d738}",
            "strict_min_version": "50.0"
        }
    }
}
