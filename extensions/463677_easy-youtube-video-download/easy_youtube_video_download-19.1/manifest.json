{
  "name": "Easy Youtube Video Downloader Express",
  "developer": {
    "name": "Dishita",
    "url": "https://www.yourvideofile.org/"
  },
  "description": "No# 1 Rated Youtube Video Downloader for firefox web-browser with MP3 and Full-HD downloads. Instant, one-click Youtube video downloader with high-quality 256Kbps/128Kbps MP3 and Full-HD video downloading options.",
  "manifest_version": 2,
  "version": "19.1",
  "icons": {
    "48": "icons/icon.png"
  },
  "background": {
    "scripts": [
      "includes/purify.min.js",
      "includes/background.js"
    ]
  },
  "content_scripts": [
    {
      "js": [
        "includes/ui.js",
        "includes/common.js",
        "includes/notification.js",
        "includes/purify.min.js",
        "includes/youtube-video-downloader.js",
        "popup/message.js"
      ],
      "matches": [
        "http://www.youtube.com/*",
        "https://www.youtube.com/*",
        "http://m.youtube.com/*"
      ],
      "exclude_matches": [
        "http://www.youtube.com/embed/*",
        "https://www.youtube.com/embed/*"
      ],
      "run_at": "document_start",
      "css": [
        "includes/youtube-video-downloader.css"
      ]
    }
  ],
  "options_ui": {
    "page": "options/options.html",
    "browser_style": true
  },
  "web_accessible_resources": [
    "icons/icon.png",
    "icons/16.png",
    "icons/icon64.png",
    "options/options.html",
    "icons/closeBtn.png"
  ],
  "permissions": [
    "<all_urls>",
    "downloads",
    "storage",
    "activeTab"
  ],
  "incognito": "spanning",
  "browser_action": {
    "browser_style": true,
    "default_title": "Easy Youtube Video Downloader",
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon.png",
      "32": "icons/icon32.png"
    }
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "{b9acf540-acba-11e1-8ccb-001fd0e08bd4}"
    }
  }
}