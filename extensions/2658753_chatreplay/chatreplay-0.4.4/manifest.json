{
  "name": "ChatReplay",
  "version": "0.4.4",
  "manifest_version": 2,
  "description": "Watch stream archive videos with chat replay.",
  "author": "Restorn",
  "icons": {
    "16": "img/icon16.png",
    "48": "img/icon48.png",
    "128": "img/icon128.png"
  },
  "permissions": [
    "activeTab",
    "contextMenus",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://www.youtube.com/*"
      ],
      "run_at": "document_idle",
      "js": [
        "js/WindowMessenger.js",
        "js/content.js"
      ],
      "css": [
        "js/content.css"
      ]
    }
  ],
  "background": {
    "scripts": [
      "bg/background.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "html/popup.html"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "{25cddbee-458b-4e9f-984d-dbf35511f124}"
    }
  }
}