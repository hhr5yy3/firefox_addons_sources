{
  "web_accessible_resources": [
    "css/common.css",
    "css/bootstrap.min.css",
    "images/001_50.png",
    "images/play.png",
    "images/pause.png",
    "images/arrow.png",
    "images/bookcase-32.png",
    "images/hoopla-49x21.png",
    "images/openlibrary-logo-tighter.svg",
    "images/toolbar_select.gif"
  ],
  "manifest_version": 2,
  "name": "Library Extension",
  "icons": {
    "48": "images/bookcase-48.png",
    "96": "images/bookcase-96.png"
  },
  "default_locale": "en",
  "browser_specific_settings": {
    "gecko": {
      "id": "firefox@libraryextension.com"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.libraryextension.com/*",
        "https://api.libraryextension.com/*"
      ],
      "css": [
        "css/common.css"
      ],
      "js": [
        "common.js"
      ],
      "run_at": "document_end"
    }
  ],
  "content_security_policy": "connect-src 'self' *; script-src 'self'; object-src 'self';",
  "browser_action": {
    "default_icon": {
      "32": "images/bookcase-32.png"
    },
    "default_title": "Library Extension",
    "default_popup": "config.html",
    "browser_style": true
  },
  "homepage_url": "https://www.libraryextension.com/",
  "version": "2025.113.1",
  "options_ui": {
    "page": "config.html",
    "open_in_tab": true,
    "browser_style": true
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "permissions": [
    "tabs",
    "http://*/*",
    "https://*/*"
  ]
}