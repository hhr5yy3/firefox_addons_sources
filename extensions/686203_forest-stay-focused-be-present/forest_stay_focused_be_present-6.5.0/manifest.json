{
  "manifest_version": 2,
  "version": "6.5.0",
  "default_locale": "en",
  "name": "__MSG_appName__",
  "description": "__MSG_appDesc__",
  "author": "Seekrtech",
  "homepage_url": "https://www.forestapp.cc",
  "icons": {
    "16": "logo/16.png",
    "32": "logo/32.png",
    "48": "logo/48.png",
    "128": "logo/128.png"
  },
  "web_accessible_resources": [
    "*.png",
    "*.svg",
    "*.json"
  ],
  "browser_action": {
    "default_popup": "src/popup/index.html",
    "default_icon": {
      "16": "logo/16.png",
      "32": "logo/32.png",
      "48": "logo/48.png",
      "128": "logo/128.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "src/content/index.js"
      ]
    }
  ],
  "background": {
    "persistent": true,
    "scripts": [
      "src/background/index.js"
    ]
  },
  "options_ui": {
    "page": "src/options/index.html",
    "open_in_tab": true
  },
  "permissions": [
    "alarms",
    "storage",
    "unlimitedStorage",
    "notifications",
    "activeTab",
    "tabs",
    "identity",
    "http://*/*",
    "https://*/*"
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "@forest-firefox-addon"
    }
  }
}