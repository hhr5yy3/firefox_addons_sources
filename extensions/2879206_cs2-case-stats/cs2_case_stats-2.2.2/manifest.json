{
  "manifest_version": 3,
  "name": "CS2 Case Stats",
  "version": "2.2.2",
  "description": "Scrapes and calculates your CS:GO case opening statistics from your Steam inventory.",
  "action": {
    "default_icon": {
      "256": "icons/icon.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "https://steamcommunity.com/*/inventoryhistory/*"
      ],
      "js": [
        "content-script.js"
      ]
    }
  ],
  "host_permissions": [
    "https://steamcommunity.com/*/inventoryhistory/*"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "skins.csv",
        "chart.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "icons": {
    "256": "icons/icon.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "7588e9d496411dc6b68d6d1eae10e172a702f019@example.com"
    }
  }
}