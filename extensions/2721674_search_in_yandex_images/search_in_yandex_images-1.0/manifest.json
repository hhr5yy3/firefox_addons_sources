{
  "manifest_version": 2,
  "name": "__MSG_extensionName__",
  "description": "__MSG_extensionDescription__",
  "author": "fakelog",
  "version": "1.0",
  "default_locale": "ru",
  "icons": {
    "96": "/icons/icon-dark.png"
  },
  "applications": {
    "gecko": {
      "strict_min_version": "57.0"
    }
  },
  "background": {
    "scripts": [
      "js/background.js"
    ]
  },
  "content_scripts": [
    {
      "js": [
        "js/page.js"
      ],
      "matches": [
        "*://*/*"
      ],
      "all_frames": true,
      "run_at": "document_end"
    }
  ],
  "permissions": [
    "activeTab",
    "contextMenus"
  ]
}