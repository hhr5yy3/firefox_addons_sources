{
  "name": "Speed Test Meter and Search",
  "description": "Speed Test Meter",
  "version": "1.0.2",
  "manifest_version": 2,
  "browser_action": {
    "browser_style": true,
    "default_title": "Speed Test Meter and Search"
  },
  "permissions": [
    "storage",
    "tabs",
    "activeTab",
    "*://speedtestmeter.com/*"
  ],
  "chrome_settings_overrides": {
    "search_provider": {
      "name": "Yahoo by Speed Test Meter and Search",
      "keyword": "Speed Test Meter and Search",
      "search_url": "https://search.yahoo.com/yhs/search?hspart=ata&hsimp=yhs-001&type=type9023430-aal-160001-160002&param1=160001&param2=160002&p={searchTerms}&grd=1",
      "favicon_url": "https://www.yahoo.com/favicon.ico",
      "suggest_url": "https://search.yahoo.com/sugg/ie?output=fxjson&command={searchTerms}&nResults=10",
      "is_default": true
    }
  },
  "background": {
    "scripts": [
      "./js/background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "*://speedtestmeter.com/*"
      ],
      "run_at": "document_end",
      "all_frames": false,
      "js": [
        "./js/contentscript.js"
      ]
    }
  ],
  "icons": {
    "48": "./images/icon.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "addon@speedtestmeter.com",
      "strict_min_version": "98.0"
    }
  }
}