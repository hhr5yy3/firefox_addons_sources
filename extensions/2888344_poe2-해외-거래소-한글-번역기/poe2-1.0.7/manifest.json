  "content_security_policy": "script-src 'self' https://raw.githubusercontent.com; object-src 'self'",
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.pathofexile.com/trade2/*"
      ],
      "js": [
        "translateData.js",
        "resultData.js",
        "translateUI.js",
        "wishlist.js",
        "init.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "browser_action": {
    "default_title": "Click to open POE2 trade website with custom settings",
    "default_icon": "icons/icon.png"
  },
  "icons": {
    "16": "icons/icon.png",
    "48": "icons/icon.png",
    "128": "icons/icon.png"
  }
}