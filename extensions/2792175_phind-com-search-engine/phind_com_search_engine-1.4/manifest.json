{
  "manifest_version": 2,
  "name": "Phind.com Search Engine",
  "version": "1.4",
  "description": "Sets Firefox's default search engine to Phind.com",
  "icons": {
    "16": "icon.16x16.png",
    "48": "icon.48x48.png",
    "128": "icon.png"
  },
  "chrome_settings_overrides": {
    "search_provider": {
      "name": "phind.com",
      "keyword": "phind",
      "search_url": "https://phind.com/search?q={searchTerms}&source=searchbox",
      "favicon_url": "https://you.com/favicon/favicon.ico",
      "encoding": "UTF-8",
      "is_default": true
    }
  },
  "content_scripts": [
    {
      "matches": [
        "*://localhost/*",
        "*://phind.com/*",
        "*://*.phind.com/*"
      ],
      "js": [
        "content-script.js"
      ]
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "{52a9b295-bce2-4dd3-8de8-c22a87e78079}"
    }
  }
}