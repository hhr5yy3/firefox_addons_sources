{
  "manifest_version": 2,
  "name": "Ya.ru",
  "version": "1.0",
  "description": "Add Search System Ya.ru",
  "icons": {
    "48": "icon.svg"
  },
  "chrome_settings_overrides": {
    "search_provider": {
      "name": "Ya.ru",
      "search_url": "https://ya.ru/search?text={searchTerms}",
      "favicon_url": "https://ya.ru/favicon.ico",
      "suggest_url": "https://ya.ru/suggest?text={searchTerms}",
      "is_default": true
    }
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "permissions": [
    "tabs"
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "{78e704fd-0459-43af-b519-a584baa3fa8a}"
    }
  }
}