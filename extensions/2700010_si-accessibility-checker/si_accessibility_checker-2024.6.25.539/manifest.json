{
  "manifest_version": 3,
  "version": "2024.6.25.539",
  "name": "Siteimprove Accessibility Checker",
  "description": "Jumpstart your web accessibility efforts directly in Firefox.",
  "author": "Siteimprove",
  "homepage_url": "https://siteimprove.com",
  "default_locale": "en",
  "permissions": [
    "activeTab",
    "storage",
    "unlimitedStorage",
    "scripting"
  ],
  "host_permissions": [
    "*://hello.siteimprove.com/*"
  ],
  "icons": {
    "16": "icon/icon16.png",
    "24": "icon/icon24.png",
    "32": "icon/icon32.png",
    "48": "icon/icon48.png",
    "128": "icon/icon128.png"
  },
  "action": {
    "default_icon": {
      "16": "icon/icon16.png",
      "24": "icon/icon24.png",
      "32": "icon/icon32.png",
      "48": "icon/icon48.png",
      "128": "icon/icon128.png"
    }
  },
  "background": {
    "scripts": [
      "api.js"
    ],
    "type": "module"
  },
  "devtools_page": "devtools.html",
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "{d91c4e69-c993-4d5b-982b-fb3af40be3e1}"
    }
  }
}