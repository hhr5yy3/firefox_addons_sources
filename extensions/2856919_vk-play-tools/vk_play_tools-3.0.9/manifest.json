{
  "name": "VK Play Tools",
  "short_name": "VPL Tools",
  "description": "\u041d\u0435\u043e\u0444\u0438\u0446\u0438\u0430\u043b\u044c\u043d\u043e\u0435 \u0440\u0430\u0441\u0448\u0438\u0440\u0435\u043d\u0438\u0435 \u0434\u043b\u044f \u0443\u043b\u0443\u0447\u0448\u0435\u043d\u0438\u044f VK Play Live",
  "version": "3.0.9",
  "manifest_version": 3,
  "author": "Chimildic",
  "host_permissions": [
    "https://twitchtracker.com/*",
    "https://api.betterttv.net/*",
    "https://api.frankerfacez.com/*",
    "https://emotes.adamcy.pl/*",
    "https://*.live.vkplay.ru/*",
    "https://*.live.vkvideo.ru/*",
    "https://www.streamdatabase.com/*"
  ],
  "permissions": [
    "storage",
    "unlimitedStorage",
    "alarms",
    "scripting"
  ],
  "content_scripts": [
    {
      "js": [
        "assets/js/content.ts-loader.js"
      ],
      "run_at": "document_start",
      "all_frames": true,
      "matches": [
        "https://*.live.vkvideo.ru/*"
      ],
      "css": [
        "assets/css/content.ts.css",
        "assets/css/content.ts.css"
      ]
    }
  ],
  "externally_connectable": {
    "matches": [
      "https://*.live.vkvideo.ru/*"
    ]
  },
  "action": {},
  "options_ui": {
    "page": "src/options.html",
    "open_in_tab": true
  },
  "background": {
    "scripts": [
      "service-worker-loader.js"
    ],
    "type": "module"
  },
  "icons": {
    "48": "assets/icons/icon48.png",
    "64": "assets/icons/icon64.png",
    "128": "assets/icons/icon128.png",
    "256": "assets/icons/icon256.png",
    "512": "assets/icons/icon512.png"
  },
  "web_accessible_resources": [
    {
      "matches": [
        "https://*.live.vkvideo.ru/*"
      ],
      "resources": [
        "assets/icons/icon48.png",
        "assets/icons/icon-rounded.png",
        "assets/images/settings.svg",
        "assets/images/refresh.svg",
        "assets/images/emote-button.svg",
        "assets/images/play-button.svg",
        "assets/images/clear-button.svg",
        "assets/js/mention-audio.js",
        "assets/js/enum.js",
        "assets/js/floating-ui.dom.esm.js",
        "assets/js/content.ts.js",
        "assets/js/main.js",
        "assets/sounds/vk-message.mp3",
        "assets/sounds/ok-message.mp3",
        "assets/sounds/icq-message-1.mp3",
        "assets/sounds/icq-message-2.mp3",
        "assets/sounds/discord-message.mp3",
        "assets/sounds/iphone-message.mp3",
        "assets/sounds/bttv.ogg",
        "assets/sounds/achievement.mp3",
        "assets/sounds/deduction.mp3",
        "assets/sounds/hmm.mp3",
        "assets/sounds/prum.mp3",
        "assets/sounds/snapchat.mp3",
        "assets/sounds/that-was-quick.mp3",
        "assets/sounds/soft-bells.mp3",
        "assets/sounds/xperia-z-reminder.mp3"
      ]
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "chimildic@vkplaytools"
    }
  }
}