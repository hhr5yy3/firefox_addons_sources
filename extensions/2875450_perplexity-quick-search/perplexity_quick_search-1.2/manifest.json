{
  "manifest_version": 3,
  "name": "Perplexity Quick Search for Mozilla",
  "version": "1.2",
  "description": "Allows you to quickly search using Perplexity via the keyword ask and styles Perplexity to be similar to Arc Search's Browse For Me.",
  "permissions": [
    "tabs",
    "storage",
    "webNavigation"
  ],
  "host_permissions": [
    "https://*.google.com/*",
    "https://www.perplexity.ai/*"
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.perplexity.ai/*"
      ],
      "js": [
        "content.js"
      ],
      "css": [
        "perplexity.css"
      ],
      "html": [
        "perplexity.html"
      ]
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "perplexityquicksearch@valkryx.com",
      "strict_min_version": "109.0"
    }
  },
  "icons": {
    "16": "./icons/icon16.png",
    "48": "./icons/icon48.png",
    "128": "./icons/icon128.png"
  },
  "action": {
    "default_icon": {
      "16": "./icons/icon16.png",
      "48": "./icons/icon48.png",
      "128": "./icons/icon128.png"
    },
    "default_popup": "popup.html"
  }
}