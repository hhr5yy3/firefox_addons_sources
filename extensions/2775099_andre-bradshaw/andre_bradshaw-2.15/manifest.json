{
  "manifest_version": 2,
  "name": "Twitch VOD Downloader and Viewer",
  "version": "2.15",
  "description": "Download and View Twitch VOD Segments",
  "content_scripts": [
    {
      "matches": [
        "https://www.twitch.tv/*"
      ],
      "js": [
        "icons.js",
        "utilities.js",
        "domFunctions.js",
        "hls.js",
        "cssFunction.js",
        "markVodStreams.js",
        "videoFunctions.js",
        "streamExtractionUtils.js",
        "dualSlider.js",
        "uiCreation.js",
        "buttons.js",
        "content.js"
      ]
    }
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "permissions": [
    "https://gql.twitch.tv/gql",
    "https://usher.ttvnw.net/*/*",
    "https://video-weaver.atl01.hls.ttvnw.net/*/*",
    "https://*.cloudfront.net/*",
    "https://streamscharts.com/*"
  ],
  "icons": {
    "48": "48.png",
    "96": "96.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "{33873724-a6c2-478f-831a-fdd2bb875896}"
    }
  }
}