{
  "manifest_version": 2,
  "name": "Simplify Copilot - Autofill job applications",
  "version": "2.0.50",
  "icons": {
    "16": "assets/icons/favicon-16.png",
    "32": "assets/icons/favicon-32.png",
    "48": "assets/icons/favicon-48.png",
    "128": "assets/icons/favicon-128.png"
  },
  "description": "The better way to job search. Quick apply and autofill job applications in one click. Track jobs, companies, resumes & more!",
  "homepage_url": "https://simplify.jobs/",
  "short_name": "Simplify Jobs",
  "permissions": [
    "activeTab",
    "cookies",
    "contextMenus",
    "storage",
    "tabs",
    "unlimitedStorage",
    "webNavigation",
    "webRequest",
    "http://*/*",
    "https://*/*"
  ],
  "content_security_policy": "default-src 'self' 'wasm-unsafe-eval'; script-src 'self' 'wasm-unsafe-eval'; connect-src *; img-src 'self' https://storage.googleapis.com https://res.cloudinary.com data:",
  "author": "Simplify Jobs Inc.",
  "browser_specific_settings": {
    "gecko": {
      "id": "sabre@simplify.jobs",
      "strict_min_version": "121.0"
    }
  },
  "browser_action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "assets/icons/favicon-16.png",
      "32": "assets/icons/favicon-32.png",
      "48": "assets/icons/favicon-48.png",
      "128": "assets/icons/favicon-128.png"
    },
    "default_title": "Simplify Copilot",
    "browser_style": false
  },
  "background": {
    "scripts": [
      "js/background.bundle.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "*://*/*"
      ],
      "js": [
        "js/contentScript.bundle.js"
      ],
      "run_at": "document_end",
      "all_frames": true
    }
  ],
  "web_accessible_resources": [
    "assets/*",
    "css/*",
    "js/*"
  ]
}