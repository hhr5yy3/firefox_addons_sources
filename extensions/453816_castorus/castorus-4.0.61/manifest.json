{
  "name": "Castorus",
  "manifest_version": 2,
  "version": "4.0.61",
  "applications": {
    "gecko": {
      "id": "contact@castorus.com"
    }
  },
  "description": "Historique des annonces immobilieres",
  "icons": {
    "128": "icon.png"
  },
  "page_action": {
    "default_title": "Castorus",
    "default_icon": "icon.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "permissions": [
    "tabs",
    "storage",
    "webRequest",
    "webNavigation",
    "http://*/*",
    "https://*/*"
  ],
  "externally_connectable": {
    "matches": [
      "*://*.castorus.com/*"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_start"
    }
  ]
}