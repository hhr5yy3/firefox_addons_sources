{
  "manifest_version": 2,
  "name": "Zotero Scholar",
  "version": "1.0",
  "description": "Show a badge on Google Scholar search results that are already in your Zotero library",
  "icons": {
    "48": "icons/Icon-48.png"
  },
  "permissions": [
    "http://localhost/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://scholar.google.com/scholar*"
      ],
      "run_at": "document_end",
      "js": [
        "zotero-scholar.js"
      ]
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "{189cac99-4ad6-461b-a410-4cb49821981b}"
    }
  }
}