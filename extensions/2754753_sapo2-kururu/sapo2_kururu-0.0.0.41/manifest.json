{
  "name": "Sapo2 Kururu",
  "short_name": "Kururu",
  "manifest_version": 2,
  "version": "0.0.0.41",
  "description": "Ferramentas voltadas para a Consultoria no SuperSapiens",
  "icons": {
    "128": "images/sapo2_128.png"
  },
  "page_action": {
    "default_title": "Tarefas Adicionais/Additional Tasks",
    "default_icon": "images/sapinho_botao.png",
    "default_popup": "icone.html"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "browser_action": {
    "default_icon": "images/sapo2_128.png",
    "default_popup": "icone.html"
  },
  "content_scripts": [
    {
      "run_at": "document_idle",
      "matches": [
        "https://supersapiens.agu.gov.br/*"
      ],
      "js": [
        "/shared/mftools.js",
        "/shared/popup.js",
        "/shared/msggenerica.js",
        "/shared/request_mf.js",
        "/shared/tudo2.js",
        "/shared/payloads.js",
        "/shared/lancar_atividade.js",
        "/shared/input_mf.js",
        "content.js"
      ]
    }
  ],
  "permissions": [
    "tabs",
    "activeTab",
    "cookies",
    "https://manoelpaz.com/*",
    "https://*.cgutec.dev/*",
    "https://acervopessoal.org/*",
    "https://*.agu.gov.br/*",
    "https://*.gstatic.com/*"
  ],
  "web_accessible_resources": [
    "images/*.png",
    "images/*.svg",
    "*.png",
    "https://*.agu.gov.br/*",
    "https://manoelpaz.com/*",
    "https://acervopessoal.org/*"
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "{0388e670-45ee-4ad7-b87e-0c5f3a52c33f}"
    }
  }
}