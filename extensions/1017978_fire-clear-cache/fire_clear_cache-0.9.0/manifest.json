{

    "description": "Fire Clear Cache",
    "manifest_version": 2,
    "name": "Fire Clear Cache",
    "version": "0.9.0",
    "icons": {
      "16": "img/icon_16.png",
      "48": "img/icon_48.png",
      "128": "img/icon_128.png"
    },

    "background": {
        "scripts": ["lib/jquery-3.5.1.js", "lib/signals.js", "lib/icon-animation.js", "background.js"]
    },

    "applications": {
        "gecko": {
            "id": "@fireclearcache",
            "strict_min_version": "57.0"
        }
    },

    "browser_action": {
      "default_icon": {
        "19": "img/icon_19.png",
        "38": "img/icon_38.png"
      },
      "default_title": "Clear Cache"
    },

    "options_ui": {
        "page": "options/options.html",
        "open_in_tab": true
    },

    "permissions": [
        "browsingData",
        "storage",
        "tabs",
        "cookies"
    ]
}
