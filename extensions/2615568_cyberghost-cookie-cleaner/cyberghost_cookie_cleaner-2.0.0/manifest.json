{
  "manifest_version": 2,
  "name": "__MSG_appName__",
  "description": "__MSG_appDesc__",
  "default_locale": "en",
  "short_name": "CyberGhost",
  "author": "CyberGhost VPN",
  "version": "2.0.0",
  "icons": {
    "16": "icon_16.png",
    "128": "icon_128.png"
  },
  "browser_action": {
    "default_icon": {
      "16": "icon_16.png",
      "19": "icon_16.png",
      "38": "icon_32.png",
      "128": "icon_128.png"
    },
    "default_popup": "index.html",
    "default_title": "CyberGhost Cookie Cleaner"
  },
  "background": {
    "scripts": [
      "background-es5.js",
      "runtime-es5.js"
    ],
    "persistent": true
  },
  "permissions": [
    "*://*/*",
    "tabs",
    "cookies",
    "history",
    "browsingData",
    "contextMenus",
    "notifications",
    "storage"
  ],
  "web_accessible_resources": [
    "assets/css/*",
    "assets/js/*",
    "assets/fonts/*"
  ]
}