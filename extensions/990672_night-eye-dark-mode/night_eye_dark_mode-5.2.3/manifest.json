{
  "manifest_version": 2,
  "default_locale": "en",
  "name": "__MSG_extName__",
  "short_name": "Night Eye",
  "description": "__MSG_extDescription__",
  "homepage_url": "https://nighteye.app/",
  "author": "RAZORlabs",
  "icons": {
    "16": "res/icon/16.png",
    "48": "res/icon/48.png",
    "128": "res/icon/128.png"
  },
  "permissions": [
    "storage",
    "contextMenus",
    "activeTab",
    "tabs",
    "*://*/*"
  ],
  "web_accessible_resources": [
    "images/*",
    "css/*",
    "_locales/*",
    "js/browser-action/*",
    "html/browser-action/*"
  ],
  "commands": {
    "toggle-current-website": {
      "suggested_key": {
        "default": "Alt+Shift+2",
        "mac": "Command+Shift+2"
      },
      "description": "__MSG_extToggleButton__"
    },
    "toggle-power-extension": {
      "suggested_key": {
        "default": "Alt+Shift+3",
        "mac": "Command+Shift+3"
      },
      "description": "Toggle on and off the extension"
    },
    "switch-filter-mode": {
      "suggested_key": {
        "default": "Alt+Shift+4",
        "mac": "Command+Shift+4"
      },
      "description": "Switch to filter mode"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "css": [
        "css/loading.css"
      ],
      "js": [
        "js/content/content.js"
      ],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "content_security_policy": "script-src 'self'; object-src 'self'",
  "browser_action": {
    "default_icon": "res/icon/48.png",
    "default_popup": "html/browser-action/home.html",
    "default_title": "Night Eye"
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "version": "5.2.3",
  "browser_specific_settings": {
    "gecko": {
      "id": "{7c6d56ed-2616-48f2-bfde-d1830f1cf2ed}"
    }
  }
}