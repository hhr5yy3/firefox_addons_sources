{
  "manifest_version": 2,
  "name": "MLB.TV Enhancer",
  "version": "1.0.9",
  "applications": {
    "gecko": {
      "id": "mlbtv-enhancer@neilpomerleau.com"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.mlb.com/tv/*"
      ],
      "js": [
        "script.js"
      ],
      "css": [
        "style.css"
      ]
    }
  ],
  "web_accessible_resources": [
    "images/*"
  ],
  "icons": {
    "48": "icon.svg",
    "96": "icon.svg"
  }
}