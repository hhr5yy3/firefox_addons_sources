{
  "background": {
    "page": "background.html"
  },
  "default_locale": "zh_CN",
  "name": "__MSG_name__",
  "description": "__MSG_description__",
  "icons": {
    "16": "images/menu_logo.png",
    "48": "images/extension_logo.png",
    "128": "images/install_logo.png"
  },
  "browser_action": {
    "default_icon": "images/icon19_normal.png",
    "default_title": "迅雷Firefox支持",
    "default_popup": "popup.html"
  },
  "content_scripts": [{
    "js": [
      "js/xl-content.js"
    ],
    "matches": [
      "http://*/*",
      "https://*/*",
      "ftp://*/*"
    ],
    "run_at": "document_end",
    "all_frames": true
  }],
  "permissions": [
    "contextMenus",
    "cookies",
    "tabs",
    "webNavigation",
    "webRequest",
    "webRequestBlocking",
    "downloads",
    "http://*/*",
    "https://*/*",
    "nativeMessaging",
    "storage"
  ],
  "version": "3.10",
  "manifest_version": 2,
  "applications": {
    "gecko": {
      "id": "xl_webbrowserstore@xunlei.com",
      "strict_min_version": "57.0"
    }
  }
}