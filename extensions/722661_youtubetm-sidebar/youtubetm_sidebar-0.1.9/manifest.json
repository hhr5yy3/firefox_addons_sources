{
  "version": "0.1.9",
  "manifest_version": 2,
  "name": "Sidebar for YouTube™",
  "short_name": "youtube-sidebar",
  "background": {"page": "lib/chrome/background.html"},
  "description": "Easy Access to YouTube via Sidebar UI",
  "web_accessible_resources": ["data/sidebar/inject/inject.css"],
  "homepage_url": "https://mybrowseraddon.com/youtube-sidebar.html",
  "permissions": ["storage", "http://*/*", "https://*/*", "webRequest", "webRequestBlocking"],
  "options_ui": {
    "open_in_tab": true,
    "chrome_style": true,
    "page": "data/options/options.html"
  },
  "sidebar_action": {
    "default_title": "Sidebar for YouTube™",
    "default_panel": "data/sidebar/sidebar.html",
    "default_icon": {
      "16": "data/icons/16.png",
      "32": "data/icons/32.png",
      "48": "data/icons/48.png",
      "64": "data/icons/64.png"
    }
  },
  "icons": {
    "16": "data/icons/16.png",
    "32": "data/icons/32.png",
    "48": "data/icons/48.png",
    "64": "data/icons/64.png",
    "128": "data/icons/128.png"
  }
}
