{
    "manifest_version": 2,
    "name": "Tidy Tabs",
    "version": "1.0.0",
    "description": "Tidy up your Tab bar.",
    "author": "Siddhartha Sarkar",
    "icons": {
        "16": "assets/icon/icon50.svg"
    },

    "background": {
        "scripts": ["browser-polyfill.min.js", "js/background.js"]
    },

    "web_accessible_resources": [
        "assets/fonts/*.woff",
        "assets/fonts/*.woff2",
        "assets/images/*.png",
        "assets/images/*.svg",
        "assets/images/*.jpg",
        "assets/images/*.gif",
        "assets/*.svg",
        "js/*.js",
        "css/*.css"
    ],
    "permissions": ["tabs"]
}
