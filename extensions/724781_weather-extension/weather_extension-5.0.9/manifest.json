{
  "name": "Weather",
  "short_name": "Weather",
  "homepage_url": "https://weatherextension.com/",
  "version": "5.0.9",
  "description": "The best way to see the Weather Forecast right in your browser. Easier than looking outside!",
  "icons": {
    "48": "img/icon48.png",
    "128": "img/icon128.png"
  },
  "background": {
    "page": "background.html",
    "persistent": true
  },
  "browser_action": {
    "default_icon": {
      "38": "img/icon38.png"
    },
    "default_title": "Weather",
    "default_popup": "popup.html"
  },
  "manifest_version": 2,
  "permissions": [
    "alarms",
    "storage",
    "geolocation",
    "notifications",
    "idle"
  ]
}