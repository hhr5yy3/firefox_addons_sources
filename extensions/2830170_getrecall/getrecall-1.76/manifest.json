{
  "manifest_version": 2,
  "name": "Recall | Summarize Anything, Forget Nothing",
  "description": "Summarize online content and save it to your knowledge base where it's automatically organized and interlinked for easy rediscovery.",
  "version": "1.76",
  "homepage_url": "https://www.getrecall.ai",
  "icons": {
    "192": "assets/images/icon-128.png"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "permissions": [
    "tabs",
    "activeTab",
    "storage",
    "bookmarks",
    "<all_urls>"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_icon": {
      "16": "assets/images/icon-16.png",
      "32": "assets/images/icon-32.png",
      "48": "assets/images/icon-48.png",
      "128": "assets/images/icon-128.png"
    }
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "info@recall-app.com"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "*://localhost/*",
        "https://*.recall-app.com/*",
        "https://*.recall.wiki/*",
        "https://*.getrecall.ai/*"
      ],
      "js": [
        "renderExtensionInstalled.js"
      ]
    }
  ]
}