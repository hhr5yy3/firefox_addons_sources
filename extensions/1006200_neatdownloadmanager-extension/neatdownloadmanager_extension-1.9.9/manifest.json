{
  "manifest_version": 2,
  "version": "1.9.9",
  "author": "Javad Motallebi",
  "description": "Sends Download Links to Neat Download Manager",
  "name": "NeatDownloadManager Extension",
  "browser_action": {
    "default_icon": {
      "16": "img/icon16.png"
    }
  },
  "background": {
    "scripts": [
      "bg.js"
    ]
  },
  "content_scripts": [
    {
      "js": [
        "ct.js"
      ],
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "all_frames": true,
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    "img/icon16.png",
    "img/icon16_2x.png",
    "img/close16.png",
    "img/close16_2x.png"
  ],
  "permissions": [
    "<all_urls>",
    "cookies",
    "contextMenus",
    "webRequest",
    "webNavigation",
    "webRequestBlocking",
    "nativeMessaging",
    "storage"
  ],
  "icons": {
    "128": "img/icon128.png",
    "16": "img/icon16.png",
    "48": "img/icon48.png"
  },
  "homepage_url": "https://www.neatdownloadmanager.com/",
  "browser_specific_settings": {
    "gecko": {
      "id": "{64d3e6d6-8a71-4443-b60b-a9b12ff1ec14}"
    }
  }
}