{
  "manifest_version": 2,
  "name": "Open magnet links in Real-Debrid",
  "version": "2.4.2",
  "description": "Adds an option to the context menu to open magnet links in real-debrid.com/torrents. Please log in to Real-Debrid first.",
  "permissions": [
    "contextMenus",
    "notifications",
    "https://real-debrid.com/*"
  ],
  "background": {
    "scripts": [
      "browser-polyfill.js",
      "background.js"
    ]
  },
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "{40d598d7-79b8-47c2-8c6a-4890779f2eff}"
    }
  }
}