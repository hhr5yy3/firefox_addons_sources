{
  "manifest_version": 2,
  "name": "__MSG_extension_name__",
  "description": "__MSG_extension_description__",
  "default_locale": "fr",
  "version": "9.3.14",
  "minimum_chrome_version": "49",
  "icons": {
    "16": "assets/icons/default/16.png",
    "48": "assets/icons/default/48.png",
    "128": "assets/icons/default/128.png"
  },
  "browser_action": {
    "default_icon": {
      "16": "assets/icons/default/16.png",
      "48": "assets/icons/default/48.png",
      "128": "assets/icons/default/128.png"
    },
    "default_title": "iGraal"
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.igraal.com/*",
        "*://*.igraal.lan/*"
      ],
      "js": [
        "scripts/website/iGraalContentScript.js"
      ],
      "run_at": "document_start"
    },
    {
      "matches": [
        "*://*/*"
      ],
      "js": [
        "scripts/vendor/browser-polyfill.min.js"
      ]
    }
  ],
  "permissions": [
    "notifications",
    "activeTab",
    "webRequest",
    "tabs",
    "management",
    "privacy",
    "http://*/",
    "https://*/",
    "https://*.igraal.com/*",
    "https://static.webextensions.io/config/extension-igraal/ext.json",
    "storage",
    "unlimitedStorage",
    "alarms"
  ],
  "options_ui": {
    "page": "./pages/settings.html",
    "open_in_tab": true
  },
  "web_accessible_resources": [
    "assets/icons/*",
    "assets/codebuster/*",
    "assets/font/*",
    "assets/pages/*",
    "assets/scripts/*"
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "{dbac9680-d559-4cd4-9765-059879e8c467}"
    }
  }
}