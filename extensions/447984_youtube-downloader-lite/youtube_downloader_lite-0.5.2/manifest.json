{
  "version": "0.5.2",
  "manifest_version": 2,
  "name": "YouTube\u2122 Downloader Lite",
  "background": {
    "page": "lib/chrome/background.html"
  },
  "homepage_url": "https://technologyto.com/media-capture.html",
  "description": "An ultra lite extension to download YouTube videos in popular formats!",
  "options_ui": {
    "open_in_tab": true,
    "page": "data/options/options.html"
  },
  "web_accessible_resources": [
    "data/content_script/icons/*",
    "data/content_script/inject.css",
    "data/content_script/resources/vendor/*"
  ],
  "permissions": [
    "storage",
    "downloads",
    "*://*.youtube.com/*",
    "*://*.googlevideo.com/*"
  ],
  "content_scripts": [
    {
      "all_frames": false,
      "run_at": "document_start",
      "matches": [
        "*://*.youtube.com/*"
      ],
      "exclude_matches": [
        "*://*.youtube.com/embed/*"
      ],
      "js": [
        "data/content_script/resources/require.js",
        "data/content_script/inject.js"
      ]
    }
  ],
  "icons": {
    "16": "data/icons/16.png",
    "32": "data/icons/32.png",
    "48": "data/icons/48.png",
    "64": "data/icons/64.png",
    "128": "data/icons/128.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "cccc5f0d-b9d0-4314-88b5-7e27551f9e84@jetpack"
    }
  }
}