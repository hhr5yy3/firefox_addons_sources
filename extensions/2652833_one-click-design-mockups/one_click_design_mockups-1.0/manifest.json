{
  "name": "Screenshot.rocks: One-click design mockups",
  "version": "1.0",
  "description": "Create beautiful browser and mobile mockups in one-click.",
  "background": {
    "persistent": false,
    "scripts": [
      "background.js"
    ]
  },
  "browser_action": {
    "default_icon": "button.png",
    "default_title": "Create Mockup Image!"
  },
  "permissions": [
    "<all_urls>"
  ],
  "manifest_version": 2,
  "icons": {
    "16": "16.png",
    "48": "48.png",
    "128": "128.png"
  }
}
