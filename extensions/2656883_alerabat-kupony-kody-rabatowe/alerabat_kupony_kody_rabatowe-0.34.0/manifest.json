{
  "version": "0.34.0",
  "manifest_version": 2,
  "name": "__MSG_appName__",
  "description": "__MSG_appDesc__",
  "default_locale": "pl",
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "run_at": "document_start",
      "all_frames": false,
      "js": [
        "lib/js/browser-polyfill.js",
        "content.js"
      ]
    }
  ],
  "background": {
    "scripts": [
      "lib/js/browser-polyfill.js",
      "background.js"
    ],
    "persistent": true
  },
  "browser_action": {
    "default_icon": {
      "16": "img/icon/icon16.png",
      "48": "img/icon/icon48.png",
      "64": "img/icon/icon64.png",
      "128": "img/icon/icon128.png"
    }
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "permissions": [
    "activeTab",
    "webNavigation",
    "cookies",
    "*://*.buykers.at/",
    "*://*.buykers.com.au/",
    "*://*.buykers.cz/",
    "*://*.buykers.de/",
    "*://*.buykers.co.uk/",
    "*://*.buykers.es/",
    "*://*.buykers.nl/",
    "*://*.buykers.com.tr/",
    "*://*.buykers.com/",
    "*://*.alerabat.com/",
    "storage"
  ],
  "icons": {
    "16": "img/icon/icon16.png",
    "48": "img/icon/icon48.png",
    "64": "img/icon/icon64.png",
    "128": "img/icon/icon128.png"
  },
  "web_accessible_resources": [
    "img/*.png",
    "img/*.svg",
    "content.css",
    "fonts/*.woff2",
    "locales/**/*.json"
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "{6c0839b6-2697-49ca-ac8c-8c65a8d9b7b9}"
    }
  }
}