{
  "name": "Kron Http-Proxy Web Extension",
  "description": "A web extension for automation of Kron Http-Proxy authentication",
  "version": "1.2",
  "manifest_version": 2,
  "permissions": [
    "management",
    "activeTab",
    "webNavigation",
    "storage",
    "webRequest",
    "webRequestBlocking",
    "<all_urls>"
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "addon-http-proxy@kron.com.tr",
      "strict_min_version": "91.1.0"
    }
  },
  "browser_action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "20": "/images/icon-20.png",
      "29": "/images/icon-29.png",
      "40": "/images/icon-40.png",
      "60": "/images/icon-60.png",
      "76": "/images/icon-76.png"
    }
  }
}