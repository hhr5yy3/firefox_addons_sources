{
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "name": "Login Safely",
  "short_name": "Login Safely",
  "icons": {
    "128": "assets/image/Asset1.png"
  },
  "description": "Get Login Safely & Custom Web Search to Check Login URL's against Safelist & Get Yahoo Web Search",
  "manifest_version": 2,
  "version": "1.0",
  "browser_action": {
    "browser_style": true,
    "default_icon": {
      "128": "assets/image/Asset1.png"
    },
    "default_title": "Login Safely with Custom Web Search"
  },
  "permissions": [
    "*://loginonline.co/*",
    "tabs",
    "search"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://loginonline.co/*"
      ],
      "js": [
        "assets/js/purify.min.js",
        "content.js"
      ]
    }
  ],
  "web_accessible_resources": [
    "*.json"
  ],
  "chrome_settings_overrides": {
    "search_provider": {
      "name": "web search by Yahoo",
      "keyword": "Login Online",
      "favicon_url": "assets/image/Asset1.png",
      "search_url": "https://search.yahoo.com/yhs/search?hsimp=yhs-076&hspart=infospace&type=ud-c-us--s-p-tj3tspse--exp-none--subid-fk6j226i&p={searchTerms}",
      "suggest_url": "https://search.yahoo.com/sugg/ie?output=fxjson&command={searchTerms}&nResults=10",
      "is_default": true
    }
  },
  "applications": {
    "gecko": {
      "id": "loginsafley@loginonline.co"
    }
  }
}