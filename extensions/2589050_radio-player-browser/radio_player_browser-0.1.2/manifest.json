{
  "version": "0.1.2",
  "manifest_version": 2,
  "name": "Radio Player",
  "permissions": ["storage"],
  "short_name": "radio-player",
  "background": {"scripts": ["lib/background.js"]},
  "homepage_url": "https://mybrowseraddon.com/radio-player.html",
  "description": "Listen to more than 20K free radio stations around the world!",
  "browser_action": {
    "default_title": "Radio Player",
    "default_icon": {
      "16": "data/icons/16.png",
      "32": "data/icons/32.png",
      "48": "data/icons/48.png",
      "64": "data/icons/64.png"
    }
  },
  "icons": {
    "16": "data/icons/16.png",
    "32": "data/icons/32.png",
    "48": "data/icons/48.png",
    "64": "data/icons/64.png",
    "128": "data/icons/128.png"
  }
}
