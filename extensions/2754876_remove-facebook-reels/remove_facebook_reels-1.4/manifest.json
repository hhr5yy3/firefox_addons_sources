{
  "manifest_version": 2,
  "name": "Remove Facebook Reels",
  "version": "1.4",
  "description": "Removes suggested reels on your Facebook page feed.",
  "icons": {
    "48": "icons/border-48.png"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.facebook.com/*"
      ],
      "js": [
        "script.js"
      ]
    }
  ],
  "permissions": [
    "webRequest",
    "https://www.facebook.com/"
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "{58b24a1a-dce2-4fac-be5f-8001be0bb7d9}"
    }
  }
}