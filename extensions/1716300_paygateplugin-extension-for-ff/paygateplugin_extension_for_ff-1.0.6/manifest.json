{
  "author": "Paygate Solutions Ltd.",
  "name": "paygate Extension for Firefox",
  "version": "1.0.6",
  "manifest_version": 2,
  "description": "Access the paygate Plugin from Firefox",
  "background": {
    "persistent": true,
    "scripts": [
      "FirefoxBackground.js"
    ]
  },
  "icons": {
    "16": "favicon16.png",
    "48": "favicon48.png",
    "128": "favicon128.png"
  },
  "applications": {
    "gecko": {
      "id": "{65893287-5E0F-4B50-ACCA-AB4B9593094E}",
      "strict_min_version": "52.0"
    }
  },
  "permissions": [
    "nativeMessaging"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*/*"
      ],
      "js": [
        "FirefoxContent.js"
      ]
    }
  ]
}