{
  "manifest_version": 2,
  "name": "Hero Citation Maker",
  "version": "1.0",
  "author": "Plagiarism Checker X",
  "permissions": [
    "storage",
    "<all_urls>"
  ],
  "browser_specific_settings": {
    "gecko": {
      "strict_min_version": "62.0",
      "id": "{3df23410-021d-4390-9423-60869392cd9c}"
    }
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "browser_action": {
    "default_icon": {
      "16": "assets/images/16x.png",
      "32": "assets/images/32x.png",
      "48": "assets/images/48x.png"
    },
    "default_title": "Hero Citation Maker"
  },
  "sidebar_action": {
    "default_icon": "assets/images/logo.png",
    "default_title": "Hero Citation Maker",
    "default_panel": "html/app.html",
    "open_at_install": true
  },
  "description": "APA, MLA, Harvard, Chicago, IEEE citation and bibliography generator.",
  "homepage_url": "https://plagiarismcheckerx.com",
  "icons": {
    "16": "assets/images/16x.png",
    "32": "assets/images/32x.png",
    "48": "assets/images/48x.png"
  }
}