{
  "version": "0.2.7",
  "manifest_version": 2,
  "name": "YouTube\u2122 to MP3",
  "background": {
    "page": "lib/chrome/background.html"
  },
  "homepage_url": "http://technologyto.com/convert-to-mp3.html",
  "description": "Convert & download YouTube videos to MP3 with just one click!",
  "options_ui": {
    "open_in_tab": true,
    "page": "data/options/options.html"
  },
  "web_accessible_resources": [
    "data/content_script/icons/mp3.png",
    "data/content_script/icons/loader.gif",
    "data/content_script/resources/vendor/*"
  ],
  "permissions": [
    "storage",
    "downloads",
    "webRequest",
    "*://*.youtube.com/*",
    "*://*.googlevideo.com/*"
  ],
  "content_scripts": [
    {
      "all_frames": false,
      "run_at": "document_start",
      "matches": [
        "*://*.youtube.com/*"
      ],
      "css": [
        "data/content_script/inject.css"
      ],
      "js": [
        "data/content_script/inject.js",
        "data/content_script/resources/require.js"
      ]
    }
  ],
  "icons": {
    "16": "data/icons/16.png",
    "32": "data/icons/32.png",
    "48": "data/icons/48.png",
    "64": "data/icons/64.png",
    "128": "data/icons/128.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "{bd7ea25e-0792-4772-bc96-fbbca9344c28}"
    }
  }
}