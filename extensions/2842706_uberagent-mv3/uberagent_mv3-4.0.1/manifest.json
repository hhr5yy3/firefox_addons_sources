{
  "manifest_version": 3,
  "name": "uberAgent",
  "description": "Enables uberAgent to collect web app usage and performance data (e.g., foreground tab, page load duration) from Firefox.",
  "version": "4.0.1",
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "action": {
    "default_icon": "icon32.png",
    "default_title": "uberAgent",
    "default_popup": "popup/uberAgent.html"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "{483699ec-db40-4a13-b984-fd7496844dc0}",
      "strict_min_version": "120.0"
    }
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "uberAgent-content.js"
      ],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],
  "permissions": [
    "alarms",
    "tabs",
    "nativeMessaging",
    "webRequest",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ]
}