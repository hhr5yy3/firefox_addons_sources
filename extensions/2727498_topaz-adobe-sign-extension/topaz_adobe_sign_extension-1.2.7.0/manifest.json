{
  "name": "Topaz Adobe Sign Extension",
  "version": "1.2.7.0",
  "manifest_version": 2,
  "description": "The Topaz Firefox Extension for Adobe Sign enables users to sign PDFs on a variety of Topaz signature pads.",
  "minimum_chrome_version": "23",
  "background": {
    "scripts": [
      "TzADCBackgroundExt.js"
    ],
    "persistent": false
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "applications": {
    "gecko": {
      "id": "adcext@topazsystems.com",
      "strict_min_version": "50.0"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "http://*.echosign.com/*",
        "https://*.echosign.com/*",
        "https://*.adobe.com/*",
        "https://*.adobesign.com/*"
      ],
      "js": [
        "TzADCSigningFirefoxExt.js"
      ],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "permissions": [
    "nativeMessaging",
    "activeTab",
    "tabs",
    "<all_urls>"
  ]
}