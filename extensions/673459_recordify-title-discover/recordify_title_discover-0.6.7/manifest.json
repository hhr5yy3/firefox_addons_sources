        "RecordifyCompanionCaller.js"
      ]
    },
    {
      "matches": [
        "*://music.apple.com/*"
      ],
      "js": [
        "RecordifyCompanion.js",
        "AppleMusicReader.js",
        "RecordifyCompanionCaller.js"
      ]
    }
  ],
  "background": {
    "scripts": [
      "PlayMusicReaderBackground.js"
    ],
    "persistent": false
  },
  "permissions": [
    "http://localhost:60024/",
    "http://localhost:60023/",
