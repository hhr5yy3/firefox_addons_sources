{
    "default_locale": "en",
    "version": "2.3.30",
    "icons": {
        "128": "i/icon_128.png",
        "64": "i/icon_64.png",
        "48": "i/icon_48.png",
        "32": "i/icon_32.png",
        "16": "i/icon_16.png"
    },
    "manifest_version": 2,
    "name": "__MSG_ext_name__",
    "short_name": "Facebook video Downloader",
    "description": "__MSG_ext_description__",
    "content_scripts": [{
        "matches": ["https://*.facebook.com/*"],
        "run_at": "document_start",
        "css": ["style.css"],
        "js": ["content.js"]
    }],
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "permissions": [
        "tabs",
        "downloads",
        "https://*.facebook.com/*", 
        "https://*.fbcdn.net/*"
    ]
}