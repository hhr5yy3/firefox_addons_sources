{
	"manifest_version": 2,
	"name": "МоиДокументы-Туризм - Бронирование",
	"author": "ООО \"МоиДокументы.ру\"",
	"version": "3.0.2",
	"description" : "Быстрая подстановка данных туристов в системы бронирования из CRM МоиДокументы-Туризм.",
	"incognito": "spanning",
	"icons": {
		"16" : "icons/16.png",
		"32" : "icons/32.png",
		"48" : "icons/48.png",
		"64" : "icons/64.png",
		"96" : "icons/96.png",
		"128" : "icons/128.png",
		"256" : "icons/256.png"
	},
	"browser_action":
	{
		"default_icon": {
			"16" : "icons/16.png",
			"32" : "icons/32.png",
			"48" : "icons/48.png",
			"64" : "icons/64.png",
			"96" : "icons/96.png",
			"128" : "icons/128.png",
			"256" : "icons/256.png"
		},
		"default_title": "МоиДокументы-Туризм - Бронирование",
		"default_popup": "pages/preview.html"
	},
    "options_ui": {
    	"page": "pages/options.html",
    	"open_in_tab": false
    },
	"background":
	{
		"scripts": [
			"scripts/libs/jquery-3.6.0.min.js",
			"scripts/background.js"
		],
		"persistent":true
	},
	"web_accessible_resources": [
		"images/*",
		"css/*"
	],
	"permissions": [
		"activeTab",
		"storage"
	]
}