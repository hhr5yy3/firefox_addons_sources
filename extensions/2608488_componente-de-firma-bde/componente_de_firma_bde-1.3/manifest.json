{
    "manifest_version": 2,
    "name": "BdE eSignature Web Extension",
    "version": "1.3",
	"author": "Minsait by Indra",
    "browser_specific_settings": {
        "gecko": {
            "id": "componenteFirma@bde.es",
            "strict_min_version": "52.0"
        }
    },
	
    "icons": {
		"128": "logo.png"
	},
	
    "web_accessible_resources": ["eSignatureWebExt.js"],
	
    "permissions": ["nativeMessaging", "activeTab"],
	
    "content_scripts": [
        {
			"matches": ["https://*.bde.es/*"],
			"include_globs":["*/dcpaute/*"],
			"js": ["content.js"],
            "run_at": "document_end"
        }
    ],
	
    "background": {
        "scripts": ["background.js"]
    }
}


