{
  "manifest_version": 2,
  "name": "POE2 \ud574\uc678 \uac70\ub798\uc18c \ud55c\uae00 \ubc88\uc5ed\uae30",
  "version": "1.0.7",
  "description": "POE2 \ud574\uc678 \uac70\ub798\uc18c \ud648\ud398\uc774\uc9c0\uc758 UI\ub97c \ud55c\uae00\ud654\ud569\ub2c8\ub2e4. \n \ub610\ud55c \uc77c\ubd80 \ud3b8\uc758\uae30\ub2a5\uc744 \ucd94\uac00\ud569\ub2c8\ub2e4.",
  "applications": {
    "gecko": {
      "id": "poe2tradekr@reginweedev.com",
      "strict_min_version": "58.0"
    }
  },
  "permissions": [
    "cookies",
    "tabs",
    "activeTab",
    "storage",
    "webNavigation",
    "*://*.poe.game.daum.net/*",
    "*://*.poe2.game.daum.net/*",
    "*://*.pathofexile.com/*",
    "*://*.githubusercontent.com/*"
