{
  "manifest_version": 3,
  "name": "Brave search",
  "short_name": "brave_search",
  "description": "Adds Brave search as a search engine.",
  "version": "1.3.0",
  "icons": {
    "16": "icons/brave.svg",
    "64": "icons/brave.svg",
    "256": "icons/brave.svg"
  },
  "chrome_settings_overrides": {
    "search_provider": {
      "name": "Brave search",
      "keyword": "@brave",
      "favicon_url": "icons/brave.svg",
      "search_url": "https://search.brave.com/search?q={searchTerms}",
      "suggest_url": "https://search.brave.com/api/suggest?q={searchTerms}"
    }
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "BraveSearchExtension@io.Uvera",
      "strict_min_version": "55.0"
    }
  },
  "author": "uvera",
  "homepage_url": "https://github.com/uvera/firefox-extension-brave-search"
}