{
  "manifest_version": 2,
  "name": "WhatsApp Web Integration",
  "version": "1.1",
  "description": "Quick access to WhatsApp Web from your browser with additional features.",
  "icons": {
    "32": "icons/logo_32.png",
    "64": "icons/logo_64.png",
    "128": "icons/logo_128.png"
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "32": "icons/logo_32.png",
      "64": "icons/logo_64.png",
      "128": "icons/logo_128.png"
    }
  },
  "permissions": [
    "tabs",
    "notifications",
    "contextMenus",
    "storage"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "{c9def36b-e6e5-4874-a5fd-ca6a03058446}"
    }
  }
}