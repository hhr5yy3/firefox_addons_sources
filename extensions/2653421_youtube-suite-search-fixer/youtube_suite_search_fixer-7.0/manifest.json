{
  "applications": {
    "gecko": {
      "id": "MinYT@example.org",
      "strict_min_version": "101.0"
    }
  },
  "name": "YouTube Search Fixer",
  "version": "7.0",
  "description": "Remove all distracting YouTube search suggestions, redirect shorts and much more!",
  "icons": {
    "128": "icon128.png",
    "256": "icon256.png"
  },
  "permissions": [
    "storage"
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "browser_action": {
    "browser_style": true,
    "default_icon": "icon256.png",
    "default_title": "YouTube Search Fixer",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "run_at": "document_start",
      "matches": [
        "https://www.youtube.com/*",
        "https://m.youtube.com/*"
      ],
      "js": [
        "ytt.js"
      ],
      "css": [
        "yt.css"
      ]
    }
  ],
  "options_ui": {
    "page": "options.html",
    "browser_style": true
  },
  "manifest_version": 2
}