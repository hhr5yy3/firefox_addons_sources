{
  "description": "\u5b57\u8282\u8df3\u52a8\u51fa\u54c1\uff0c\u5f00\u7bb1\u5373\u7528\u514d\u914d\u7f6e\uff0c\u5b8c\u5168\u514d\u8d39\u65e0\u5e7f\u544a",
  "name": "\u706b\u5c71\u7ffb\u8bd1 - \u5212\u8bcd\u548c\u7f51\u9875\u7ffb\u8bd1",
  "manifest_version": 2,
  "version": "2.5.4",
  "author": "\u706b\u5c71\u7ffb\u8bd1 <volctrans@bytedance.com>",
  "homepage_url": "https://translate.volcengine.com/translate",
  "default_locale": "zh_CN",
  "content_security_policy": "script-src 'self'; object-src 'self';img-src * data:;style-src 'unsafe-inline';",
  "icons": {
    "16": "assets/logo.icon-only.png",
    "48": "assets/logo.icon-only.png",
    "128": "assets/logo.icon-only.png"
  },
  "web_accessible_resources": [
    "styles/*",
    "fonts/*",
    "assets/*"
  ],
  "permissions": [
    "<all_urls>",
    "storage",
    "tabs",
    "notifications",
    "alarms",
    "menus",
    "contextMenus",
    "clipboardWrite"
  ],
  "browser_action": {
    "default_title": "\u706b\u5c71\u7ffb\u8bd1 - \u5212\u8bcd\u548c\u7f51\u9875\u7ffb\u8bd1",
    "default_icon": "assets/logo.icon-only.png",
    "default_popup": "popup/popup.html"
  },
  "background": {
    "scripts": [
      "background/background.js"
    ]
  },
  "options_ui": {
    "page": "options/options.html",
    "open_in_tab": true
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content/content.js"
      ],
      "all_frames": true,
      "run_at": "document_idle"
    }
  ],
  "commands": {
    "z_use_eager": {
      "suggested_key": {
        "default": "Alt+Shift+E"
      },
      "description": "__MSG_eager_hotkey_describe__"
    },
    "use_text_input_box": {
      "suggested_key": {
        "default": "Alt+Shift+D"
      },
      "description": "__MSG_text_input_hotkey_describe__"
    },
    "use_web_trans": {
      "suggested_key": {
        "mac": "Alt+Shift+T",
        "default": "Alt+Shift+W"
      },
      "description": "__MSG_web_trans_hotkey_describe__"
    },
    "use_show_result": {
      "suggested_key": {
        "default": "Alt+Shift+Z"
      },
      "description": "__MSG_show_result_hotkey_describe__"
    }
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "{484a8f92-f0fa-4771-9aab-a81607ee7a61}"
    }
  }
}