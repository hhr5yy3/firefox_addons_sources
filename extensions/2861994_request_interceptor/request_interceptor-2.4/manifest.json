{
  "manifest_version": 2,
  "name": "Request Interceptor",
  "version": "2.4",
  "description": "A Firefox extension to intercept HTTP requests, manually edit and send them to the server.",
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "<all_urls>",
    "storage",
    "tabs"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "type": "module"
  },
  "browser_action": {
    "default_icon": "icon-off.png"
  },
  "icons": {
    "48": "icon-off.png",
    "128": "icon-on.png"
  },
  "web_accessible_resources": [
    "extension-page.html",
    "highlight.min.js",
    "default.min.css",
    "styles.css",
    "json.min.js",
    "xml.min.js"
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "{9efa0613-820d-4f74-8876-11ac0c17244e}"
    }
  }
}