{
    "manifest_version": 2,
    "name": "__MSG_extensionName__",
    "description": "__MSG_extensionDescription__",
    "version": "0.4.20",

    "applications": {
        "gecko": {
        "id": "koct@koha.fr"
        }
    },

    "icons": {
        "48": "icons/koha-48.png",
        "96": "icons/koha-96.png"
    },

    "permissions": [
        "tabs",
        "storage",
        "<all_urls>",
        "downloads"
    ],

    "browser_action": {
        "default_icon": "icons/koha-32.png",
        "default_title": "Koha Offline Circulation Tool"
    },

    "background": {
        "scripts": ["background-script.js"]
    },

    "options_ui": {
        "page": "options.html"
    },

    "default_locale": "en"
}
