{
  "name": "Recordify Title Discover",
  "description": "Will discover the current running song of a streaming service.",
  "version": "0.6.7",
  "author": "Abelssoft",
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "browser_action": {
    "default_icon": {
      "16": "icon16.png",
      "24": "icon24.png",
      "32": "icon32.png"
    },
    "default_title": "Recordify Title Discover"
  },
  "homepage_url": "https://www.abelssoft.de/en/windows/Multimedia/Recordify",
  "content_scripts": [
    {
      "matches": [
        "*://play.google.com/music/*"
      ],
      "js": [
        "RecordifyCompanion.js",
        "PlayMusicReader.js",
        "RecordifyCompanionCaller.js"
      ]
    },
    {
      "matches": [
        "*://open.spotify.com/*"
      ],
      "js": [
        "RecordifyCompanion.js",
        "SpotifyMusicReader.js",
        "RecordifyCompanionCaller.js"
      ]
    },
    {
      "matches": [
        "*://music.amazon.com/*"
      ],
      "js": [
        "RecordifyCompanion.js",
        "AmazonMusicReader.js",
        "RecordifyCompanionCaller.js"
      ]
    },
    {
      "matches": [
        "*://music.amazon.de/*"
      ],
      "js": [
        "RecordifyCompanion.js",
        "AmazonMusicReader.js",
        "RecordifyCompanionCaller.js"
      ]
    },
    {
