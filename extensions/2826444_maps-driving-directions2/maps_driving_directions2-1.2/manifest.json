{
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "name": "Maps & Driving Directions",
  "short_name": "Maps & Driving Directions",
  "icons": {
    "128": "assets/image/Asset1.png"
  },
  "description": "Add Maps & Driving Directions & Custom Web Search extension then click the icon on your toolbar to access Driving Directions plus Yahoo Web Search.",
  "manifest_version": 2,
  "version": "1.2",
  "browser_action": {
    "browser_style": true,
    "default_icon": {
      "128": "assets/image/Asset1.png"
    },
    "default_title": "Maps & Driving Directions & Custom Web Search"
  },
  "permissions": [
    "*://mapsdrivingdirections.net/*",
    "tabs",
    "search"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://mapsdrivingdirections.net/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "web_accessible_resources": [
    "*.json"
  ],
  "chrome_settings_overrides": {
    "search_provider": {
      "name": "web search by Yahoo",
      "keyword": "Driving Directions",
      "favicon_url": "assets/image/Asset1.png",
      "search_url": "https://search.yahoo.com/yhs/search?hsimp=yhs-076&hspart=infospace&type=ud-c-us--s-p-tfzzhiwm--exp-none--subid-fk6j226i&p={searchTerms}",
      "suggest_url": "https://search.yahoo.com/sugg/ie?output=fxjson&command={searchTerms}&nResults=10",
      "is_default": true
    }
  },
  "applications": {
    "gecko": {
      "id": "easydrivingdirections_newvers@easydrivingdirections.com"
    }
  }
}