{
  "manifest_version": 2,
  "name": "aiBlock by amorehuman.net",
  "description": "Blocks useless AI integrations into websites",
  "version": "1.0.1",
  "icons": {
    "16": "icon/16.png",
    "32": "icon/32.png",
    "48": "icon/48.png",
    "96": "icon/96.png",
    "128": "icon/128.png",
    "256": "icon/256.png"
  },
  "permissions": [
    "storage",
    "activeTab",
    "<all_urls>"
  ],
  "options_ui": {
    "page": "options.html"
  },
  "web_accessible_resources": [
    "filters.toml"
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "browser_action": {
    "default_title": "aiBlock",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "run_at": "document_start",
      "js": [
        "content-scripts/content.js"
      ]
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "{046b448a-b174-4981-b039-6c7ae85cc509}"
    }
  }
}