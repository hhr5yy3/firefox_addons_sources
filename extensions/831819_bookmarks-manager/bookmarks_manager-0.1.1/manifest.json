{

  "manifest_version": 2,
  "name": "Bookmarks Manager",
  "version": "0.1.1",

  "description": "Bookmarks manager for removing empty folders, backup and restore bookmarks.",

  "applications": {
    "gecko": {
      "id": "{4756d0a0-5c4f-4f30-8467-d2754a2cce1f}"
    }
  },

  "permissions": [
    "bookmarks",
    "tabs",
    "activeTab",
    "storage",
    "webRequest",
    "webRequestBlocking"
  ],

  "background": {
    "scripts": ["background.js"]
  },

  "icons": {
    "32": "icons/action-32.png",
    "48": "icons/action-48.png",
    "64": "icons/action-64.png"
  },

  "browser_action": {
    "default_icon": "icons/action-32.png",
    "default_title": "Bookmarks Manager",
    "default_popup": "popup/action.html"
  }

}
