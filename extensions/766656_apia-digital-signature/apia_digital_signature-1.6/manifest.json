{
  "manifest_version": 2,
  "name": "__MSG_appName__",
  "description": "__MSG_appDesc__",
  "default_locale": "en",
  "version": "1.6",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "permissions": [
    "activeTab",
    "*://developer.mozilla.org/*",
    "nativeMessaging"
  ],
  "applications": {
    "gecko": {
      "id": "sign.extension@apia.com",
      "strict_min_version": "50.0"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "*://*/*firefoxSignature.jsp*"
      ],
      "css": [],
      "js": [
        "content.js"
      ],
      "all_frames": true
    }
  ],
  "background": {
    "scripts": [
      "apiaSign.js"
    ]
  }
}